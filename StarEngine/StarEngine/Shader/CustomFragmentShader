#version 330 core
out vec4 FragColor;

in vec3 ourNormal;
in vec2 TexCoord;
in vec3 DirLightFrontDir;
in vec3 DirLightColor;

struct DirLight 
{
	vec3 FrontDir;
	vec3 Color;
};

uniform sampler2D texture1;
uniform DirLight light;

void main()
{
	FragColor = texture(texture1, TexCoord)* clamp(dot(normalize(light.FrontDir),(ourNormal)),0.3,1)*light.Color ;
}